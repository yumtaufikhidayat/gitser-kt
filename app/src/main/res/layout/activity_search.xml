<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.search.SearchActivity">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/viewResultsVisibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="viewResults, tvResultsCount, rvSearchUsers"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/viewNoDataVisibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="imgNoData, tvNoDataTitle, tvNoDataDesc"/>

    <View
        android:id="@+id/viewResults"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvResultsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Menampilkan 10 hasil"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/viewResults"
        app:layout_constraintBottom_toBottomOf="@id/viewResults"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:overScrollMode="never"
        tools:listitem="@layout/item_user"
        app:layout_constraintTop_toBottomOf="@+id/viewResults"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLoadingSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/shimmer_item_user"/>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <ImageView
        android:id="@+id/imgNoData"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/tvSearchUser"
        android:src="@drawable/ic_no_data"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvNoDataTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvOops"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/imgNoData"
        app:layout_constraintStart_toStartOf="@id/imgNoData"
        app:layout_constraintEnd_toEndOf="@id/imgNoData"/>

    <TextView
        android:id="@+id/tvNoDataDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvUserNotFound"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/tvNoDataTitle"
        app:layout_constraintStart_toStartOf="@id/imgNoData"
        app:layout_constraintEnd_toEndOf="@id/imgNoData"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/layoutNoConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="imgNoNetworkConnection, tvNoConnectionTitle, tvNoConnectionDesc"/>

    <ImageView
        android:id="@+id/imgNoNetworkConnection"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/tvNull"
        android:src="@drawable/ic_outline_wifi_off"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvNoConnectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNoConnectionTitle"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/imgNoNetworkConnection"
        app:layout_constraintStart_toStartOf="@id/imgNoNetworkConnection"
        app:layout_constraintEnd_toEndOf="@id/imgNoNetworkConnection"/>

    <TextView
        android:id="@+id/tvNoConnectionDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNoConnectionDesc"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvNoConnectionTitle"
        app:layout_constraintStart_toStartOf="@+id/shimmerLoadingSearch"
        app:layout_constraintEnd_toEndOf="@id/shimmerLoadingSearch"/>

</androidx.constraintlayout.widget.ConstraintLayout>