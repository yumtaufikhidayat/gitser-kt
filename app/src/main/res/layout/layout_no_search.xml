<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgNoSearch"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/tvSearch"
        android:src="@drawable/ic_search_purple"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/imgNoSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNoResult"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/imgNoSearch"
        app:layout_constraintStart_toStartOf="@id/imgNoSearch"
        app:layout_constraintEnd_toEndOf="@id/imgNoSearch"/>

    <TextView
        android:id="@+id/imgNoSearchDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvLetsSearchUserDesc"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/imgNoSearchTitle"
        app:layout_constraintStart_toStartOf="@id/imgNoSearch"
        app:layout_constraintEnd_toEndOf="@id/imgNoSearch"/>

</androidx.constraintlayout.widget.ConstraintLayout>