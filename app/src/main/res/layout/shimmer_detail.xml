<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/viewShimmerOne"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/tvDetailUser"
        android:src="@color/colorGrey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewShimmerTwo"
        android:layout_width="200dp"
        android:layout_height="14dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerOne"
        app:layout_constraintStart_toStartOf="@id/viewShimmerOne"
        app:layout_constraintEnd_toEndOf="@id/viewShimmerOne"/>

    <View
        android:id="@+id/viewShimmerThree"
        android:layout_width="150dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerTwo"
        app:layout_constraintStart_toStartOf="@id/viewShimmerOne"
        app:layout_constraintEnd_toEndOf="@id/viewShimmerOne"/>

    <View
        android:id="@+id/viewShimmerFour"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerThree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewShimmerSix"/>

    <View
        android:id="@+id/viewShimmerFive"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerFour"
        app:layout_constraintStart_toStartOf="@id/viewShimmerFour"
        app:layout_constraintEnd_toEndOf="@id/viewShimmerFour"/>

    <View
        android:id="@+id/viewShimmerSix"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@id/viewShimmerFour"
        app:layout_constraintStart_toEndOf="@id/viewShimmerFour"
        app:layout_constraintEnd_toStartOf="@id/viewShimmerEight"/>

    <View
        android:id="@+id/viewShimmerSeven"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerSix"
        app:layout_constraintStart_toStartOf="@id/viewShimmerSix"
        app:layout_constraintEnd_toEndOf="@id/viewShimmerSix"/>

    <View
        android:id="@+id/viewShimmerEight"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@id/viewShimmerSix"
        app:layout_constraintStart_toEndOf="@id/viewShimmerSix"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewShimmerNine"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerEight"
        app:layout_constraintStart_toStartOf="@id/viewShimmerEight"
        app:layout_constraintEnd_toEndOf="@id/viewShimmerEight"/>
    
    <View
        android:id="@+id/viewShimmerTen"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerFive"
        app:layout_constraintStart_toStartOf="@id/viewShimmerFive"/>
    
    <View
        android:id="@+id/viewShimmerEleven"
        android:layout_width="150dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@id/viewShimmerTen"
        app:layout_constraintBottom_toBottomOf="@id/viewShimmerTen"
        app:layout_constraintStart_toEndOf="@+id/viewShimmerTen"/>
    
    <View
        android:id="@+id/viewShimmerTwelve"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerTen"
        app:layout_constraintStart_toStartOf="@id/viewShimmerTen"/>
    
    <View
        android:id="@+id/viewShimmerThirteen"
        android:layout_width="200dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@id/viewShimmerTwelve"
        app:layout_constraintBottom_toBottomOf="@id/viewShimmerTwelve"
        app:layout_constraintStart_toStartOf="@id/viewShimmerEleven"/>

    <View
        android:id="@+id/viewShimmerFourteen"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerTwelve"
        app:layout_constraintStart_toStartOf="@id/viewShimmerTen"/>

    <View
        android:id="@+id/viewShimmerFifteen"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@id/viewShimmerFourteen"
        app:layout_constraintBottom_toBottomOf="@id/viewShimmerFourteen"
        app:layout_constraintStart_toStartOf="@id/viewShimmerEleven"/>

    <View
        android:id="@+id/viewShimmerSixteen"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerFifteen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewShimmerSeventeen"/>

    <View
        android:id="@+id/viewShimmerSeventeen"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@+id/viewShimmerSixteen"
        app:layout_constraintBottom_toBottomOf="@id/viewShimmerSixteen"
        app:layout_constraintStart_toEndOf="@+id/viewShimmerSixteen"
        app:layout_constraintEnd_toStartOf="@id/viewShimmerEightTeen"/>

    <View
        android:id="@+id/viewShimmerEightTeen"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@id/viewShimmerSixteen"
        app:layout_constraintBottom_toBottomOf="@id/viewShimmerSixteen"
        app:layout_constraintStart_toEndOf="@+id/viewShimmerSeventeen"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewShimmerNineteen"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerSixteen"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>